<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manu.MainPage"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Image
            Source="fern_alt.jpg"
            Aspect="AspectFill"/>
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Button
                x:Name="PlayBtn"
                Text="Play"
                SemanticProperties.Hint="Press to go to the quiz selection menu."
                Clicked="OnPlayClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="0"
                CornerRadius="7"
             />

            <Button
            x:Name="ToEncyclopediaBtn"
            Text="Encyclopedia"
            SemanticProperties.Hint="Press to go to the encyclopedia."
            Clicked="OnEncyclopediaClicked"
            HorizontalOptions="Center"
            Grid.Row="3"/>

        </Grid>
    </Grid>
</ContentPage>
