<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manu.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image
            Source="bot"
            Grid.Row="0"/>

        <Button
                x:Name="PlayBtn"
                Text="Play"
                SemanticProperties.Hint="Press to go to the quiz selection menu."
                Clicked="OnPlayClicked"
                HorizontalOptions="Center"
            Grid.Row="1"/>

        <Button
            x:Name="ToEncyclopediaBtn"
            Text="Encyclopedia"
            SemanticProperties.Hint="Press to go to the encyclopedia."
            Clicked="OnEncyclopediaClicked"
            HorizontalOptions="Center"
            Grid.Row="3"/>
    </Grid>

</ContentPage>
